<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/EditTextChave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp" />

        </LinearLayout>


        <Button
            android:id="@+id/bttBuscar"
            android:layout_width="95dp"
            android:layout_height="58dp"

            android:text="Buscar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ImageViewBack"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/ImageViewNext"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView1NomePokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TextViewNomePokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView1IdPokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id: "
                android:textSize="30dp" />

            <TextView
                android:id="@+id/TextViewIdPokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageViewPokemonFront"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:id="@+id/ImageViewPokemonBack"
                android:layout_width="160dp"
                android:layout_height="160dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>