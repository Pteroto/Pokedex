<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/textViewBusca"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/pkn_name"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pkn_search"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pkn_nomeapi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pkn_name2"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pkn_idapi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pkn_id" />

    <TextView
        android:id="@+id/pkn_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pkn_type"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pkn_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pkn_type"
        android:layout_gravity="center"/>


</LinearLayout>

